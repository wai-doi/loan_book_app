<%= link_to root_path do %>
<h1>貸し出しノート</h1>
<% end %>

<%= render 'form', loan: @loan %>

<table class="table">
  <thead>
    <tr>
      <th>貸出人</th>
      <th>本のタイトル</th>
      <th>借りた日</th>
      <th>返却期限日</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.name %></td>
        <td><%= loan.book %></td>
        <td><%= loan.created_at.strftime('%Y年%m月%d日') %></td>
        <td><%= loan.created_at.since(loan.days.day).strftime('%Y年%m月%d日') %></td>
        <td>
          <%= button_to edit_loan_path(loan), method: :get do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
          <% end %>
        </td>
        <td>
          <%= button_to loan, method: :delete, data: { confirm: "#{loan.book}\nを返却しますか?" } do %>
          <span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span> 返却する
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
