<%= link_to root_path do %>
<h1>貸し出しノート</h1>
<% end %>


<%= form_for(@loan) do |form| %>
  <% if @loan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(loan.errors.count, "error") %> prohibited this loan from being saved:</h2>

      <ul>
      <% @loan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :loan_name %>
  </div>

  <div class="field">
    <%= form.label :book %>
    <%= form.text_field :book, id: :loan_book %>
  </div>

  <div class="actions">
    <%= button_tag type: 'submit' do %>
    <span class="glyphicon glyphicon-book" aria-hidden="true"></span>貸し出し
    <% end %>
  </div>
<% end %>


<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>貸出人</th>
      <th>本のタイトル</th>
      <th>借りた日</th>
      <th>返却期限日</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td>
          <%= button_to edit_loan_path(loan), method: :get do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
          <% end %>
        </td>
        <td><%= loan.name %></td>
        <td><%= loan.book %></td>
        <td><%= loan.created_at.strftime('%Y年%m月%d日') %></td>
        <td><%= loan.created_at.since(7.day).strftime('%Y年%m月%d日') %></td>
        <td>
          <%= button_to loan, method: :delete, data: { confirm: "#{loan.book}\nを返却しますか?" } do %>
          <span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span> 返却する
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
